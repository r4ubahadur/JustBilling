<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10sp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/set_table"
                android:textSize="18sp"
                android:textColor="#faaa0a"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="Set table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/add_table"
                android:textSize="18sp"
                android:textColor="#197e09"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="Add New Table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textSize="18sp"
                android:textColor="#c10aca"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="Take Away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="18sp"
                android:textColor="#097cef"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Swiping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            

        </LinearLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>