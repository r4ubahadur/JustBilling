<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:weightSum="20.3"
    android:layout_marginTop="?actionBarSize"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="4"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <include layout="@layout/abc_main_part1"/>

    </LinearLayout>


    <View
        android:layout_weight=".1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <LinearLayout
        android:background="#fff"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="0dp"
        android:baselineAligned="false">

        <include layout="@layout/abc_main_part2"/>



    </LinearLayout>


    <View
        android:layout_weight=".1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_weight="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="9.07"
        android:layout_height="0dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_width="0dp"
            android:weightSum="8"
            android:layout_height="match_parent"
            tools:ignore="NestedWeights">

           <LinearLayout
               android:orientation="vertical"
               android:weightSum="3"
               android:layout_margin="25dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <LinearLayout
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="0dp">

                   <TextView
                       android:text="Sales"
                       android:textSize="9.4sp"
                       android:textColor="#666666"
                       android:gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />

               </LinearLayout>

               <LinearLayout
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="0dp">

                   <TextView
                       android:text="₹ 0"
                       android:textSize="10sp"
                       android:textColor="#001461"
                       android:gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />

               </LinearLayout>

               <LinearLayout
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="0dp">

                   <TextView
                       android:text="0 Invoices"
                       android:textSize="10sp"
                       android:textColor="#a6a6a6"
                       android:gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />

               </LinearLayout>

           </LinearLayout>


        </LinearLayout>

        <View
            android:layout_weight=".035"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:background="#fff"
            android:weightSum="8"
            android:layout_height="match_parent"
            tools:ignore="NestedWeights">


            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_margin="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:text="Expences"
                        android:textSize="9.4sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:text="₹ 0"
                        android:textSize="10sp"
                        android:textColor="#001461"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:text="0 Vouchers"
                        android:textSize="10sp"
                        android:textColor="#a6a6a6"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_weight=".035"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:weightSum="8"
            android:background="#fff"
            android:layout_height="match_parent"
            tools:ignore="NestedWeights">


            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_margin="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:text="Products"
                        android:textSize="9.4sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:text="105"
                        android:textSize="10sp"
                        android:textColor="#001461"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:text="Out of Stock"
                        android:textSize="10sp"
                        android:textColor="#a6a6a6"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_weight=".1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_weight="7"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:id="@+id/uttamtext"
            android:background="#11d7c0"
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center"
                android:text="Graph Here"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
