<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="5dp" />
            <stroke
                android:width="1dp"
                android:color="#a8ab01" />
            <gradient
                android:angle="-90"
                android:startColor="@color/colorPrimaryDark"
                android:endColor="@color/colorPrimary"  />
        </shape>
    </item>
    <item
        android:state_focused="true">
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="3dp" />
            <stroke
                android:width="1dp"
                android:color="#06abb7" />
            <solid
                android:color="#b916e2"/>
        </shape>
    </item>
    <item >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="3dp" />
            <stroke
                android:width="1dp"
                android:color="#00b418" />
            <gradient
                android:angle="-90"
                android:startColor="#8dbab3"
                android:endColor="#58857e" />
        </shape>
    </item>
</selector>